{
  "name": "vision-gpu-dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "runArgs": [
    "--gpus", "all",
    "--shm-size=4g"
  ],
  "settings": {
    "python.defaultInterpreterPath": "/usr/bin/python3"
  },
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter"
  ],
  "postCreateCommand": "python3 -m ipykernel install --user --name=workspace",
  "remoteUser": "root"
}
